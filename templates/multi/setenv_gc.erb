
#
# GC options
#

<% if @use_concurrent_mark_sweep -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+UseConcMarkSweepGC"
<% elsif @use_parallel_gc -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+UseParallelGC"
<% end -%>
<% if @disable_explicit_gc -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+DisableExplicitGC"
<% end -%>
<% if defined?(@max_gc_pause_millis) -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:MaxGCPauseMillis=500"
<% end -%>
<% if @print_gc -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+PrintGC<% if defined?(@print_gc_file) %> -Xloggc:<%= @print_gc_file %><% end %>"
<% end -%>
<% if @print_gc_details -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+PrintGCDetails"
<% end -%>
<% if @print_gc_datestamps -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+PrintGCDateStamps"
<% end -%>
<% if @print_gc_application_stopped_time -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+PrintGCApplicationStoppedTime"
<% end -%>
<% if defined?(@cms_initiating_occupancy_fraction) -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:CMSInitiatingOccupancyFraction=<%= @cms_initiating_occupancy_fraction %>"
<% end -%>
<% if @use_cms_initiating_occupancy_only -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+UseCMSInitiatingOccupancyOnly"
<% end -%>
<% if @cms_scavenge_before_remark -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+CMSScavengeBeforeRemark"
<% end -%>
<% if @cms_parallel_remark_enabled -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+CMSParallelRemarkEnabled"
<% end -%>
<% if @print_tenuring_distribution -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+PrintTenuringDistribution"
<% end -%>
<% if @use_par_new_gc -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+UseParNewGC"
<% end -%>
<% if defined?(@par_gc_cards_per_stride_chunk) -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:ParGCCardsPerStrideChunk=<%= @par_gc_cards_per_stride_chunk %>"
<% end -%>
<% if @bind_gc_task_threads_to_cpus -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+BindGCTaskThreadsToCPUs"
<% end -%>
<% if @use_gc_task_affinity -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+UseGCTaskAffinity"
<% end -%>
<% if @scavenge_before_full_gc -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+ScavengeBeforeFullGC"
<% end -%>
<% if @print_gc_cause -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:+PrintGCCause"
<% end -%>
<% if defined?(@parallel_gc_threads) -%>
export CATALINA_OPTS="$CATALINA_OPTS -XX:ParallelGCThreads=<%= @parallel_gc_threads %>"
<% end -%>
