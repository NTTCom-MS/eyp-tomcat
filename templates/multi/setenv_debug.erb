
#
# debug options
#

<% if @debug -%>
export CATALINA_OPTS="$CATALINA_OPTS -Xdebug"
<% end -%>
<% if defined?(@runjdwp_dt_socket_address) -%>
export CATALINA_OPTS="$CATALINA_OPTS -Xrunjdwp:transport=dt_socket,address=<%= @runjdwp_dt_socket_address %>,server=<%= scope.function_bool2str([@runjdwp_dt_socket_server, 'y', 'n']) %>,suspend=<%= scope.function_bool2str([@runjdwp_dt_socket_suspend, 'y', 'n']) %>"
<% end -%>
