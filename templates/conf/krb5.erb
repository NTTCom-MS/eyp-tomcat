#
# puppet managed file
#

[libdefaults]
	default_realm = <%= @realm %>
	<%- if defined?(@default_keytab) -%>
	default_keytab_name = FILE:<%= @catalina_base %>/conf/<%= @default_keytab %>
	<%- end -%>

	default_tkt_enctypes = aes256-cts-hmac-sha1-96,aes128-cts,rc4-hmac,des3-cbc-sha1,des-cbc-crc
	default_tgs_enctypes = aes256-cts-hmac-sha1-96,aes128-cts,rc4-hmac,des3-cbc-sha1,des-cbc-crc
	permitted_enctypes   = aes256-cts-hmac-sha1-96,aes128-cts,rc4-hmac,des3-cbc-sha1,des-cbc-crc

	forwardable=<%= @forwardable %>

	allow_weak_crypto=<%= @allow_weak_crypto %>

[realms]
	LIFECAPNET.COM  = {
    <%- @kdc.each do | eachkdc | -%>
		kdc = <%= eachkdc %>
    <%- end -%>
		default_domain = <%= @realm %>
}

[domain_realm]
	.<%= @realm %> = <%= @realm %>
	<%= @realm %> = <%= @realm %>
	.<%= @realm.downcase %> = <%= @realm %>
	<%= @realm.downcase %> = <%= @realm %>
