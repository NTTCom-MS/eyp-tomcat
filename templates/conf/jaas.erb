<%- if defined?(@realm) -%>
com.sun.security.jgss.krb5.initiate {
    com.sun.security.auth.module.Krb5LoginModule required
    doNotPrompt=true
    principal="<%= @spn %>@<%= @realm %>"
    useKeyTab=true
    keyTab="<%= @catalina_base %>/conf/krb5.keytab"
    isInitiator=<%= @is_initiator %>
    refreshKrb5Config=<%= @refresh_krb5_config %>
    moduleBanner=<%= @module_banner %>
    storePass=<%= @store_pass %>
    storeKey=true
    debug=<%= @debug %>;
};

com.sun.security.jgss.krb5.accept {
    com.sun.security.auth.module.Krb5LoginModule required
    doNotPrompt=true
    principal="<%= @spn %>@<%= @realm %>"
    useKeyTab=true
    keyTab="<%= @catalina_base %>/conf/krb5.keytab"
    storeKey=true
    useTicketCache=true
    isInitiator=<%= @is_initiator %>
    refreshKrb5Config=<% @refresh_krb5_config %>
    moduleBanner=<%= @module_banner %>
    storePass=<%= @store_pass %>
    debug=<%= @debug %>;
};
<%- else -%>
<%= @app %> {
    com.sun.security.auth.module.LdapLoginModule SUFFICIENT
        userProvider="<%= @provider %>"
        userFilter="<%= @filter %>"
        authzIdentity=controlRole
        useSSL=false
        debug=true;
};

Client {
    org.apache.zookeeper.server.auth.DigestLoginModule SUFFICIENT
        username="<%= @username %>"
        password="<%= @password %>";
};
<%- end -%>
